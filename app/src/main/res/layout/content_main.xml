<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ImageView
        android:id="@+id/searchCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top"

        android:src="@drawable/world"
        android:textColorHint="#89c3c3c3"
        android:textSize="24sp"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inputET"
        app:layout_constraintBottom_toBottomOf="@id/inputET"
        app:layout_constraintTop_toTopOf="@id/inputET"
        />

    <EditText
        android:id="@+id/inputET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Enter in a Country                         "
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:textColorHint="#89c3c3c3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchCategory"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/random"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/randombut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/inputET"
        app:layout_constraintBottom_toTopOf="@id/random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/mapFL"/>

</androidx.constraintlayout.widget.ConstraintLayout>