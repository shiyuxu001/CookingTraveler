<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/searchCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top"

        android:src="@drawable/world"
        android:textColorHint="#89c3c3c3"
        android:textSize="24sp"
        android:autofillHints=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inputET"
        app:layout_constraintBottom_toBottomOf="@id/inputET"
        app:layout_constraintTop_toTopOf="@id/inputET"
        />

    <EditText
        android:id="@+id/inputET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Enter in a Country                         "
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:textColorHint="#89c3c3c3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchCategory"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/google_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
